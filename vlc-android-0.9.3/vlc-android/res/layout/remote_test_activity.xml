<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	 <Button
	     android:id="@+id/remote_up"
	     android:layout_width="150dp"
	     android:layout_height="wrap_content"
	     android:text="@string/remote_up"
	     android:onClick="onRemoteUpClick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/remote_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/remote_left"
            android:onClick="onRemoteLeftClick" />

        <Button
            android:id="@+id/remote_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/remote_right"
            android:onClick="onRemoteRightClick" />
    </LinearLayout>

    <Button
        android:id="@+id/remote_down"
        android:layout_width="153dp"        
        android:layout_height="wrap_content"
        android:text="@string/remote_down" 
        android:onClick="onRemoteDownClick"/>

    <Button
        android:id="@+id/remote_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/remote_menu" />


</LinearLayout>